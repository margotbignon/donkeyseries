{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>
    
    {% for category in categories %}
        <div>
            {{category.name}}
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    <a href="{{ path('app_index')}}">Retour à la page d'accueil</a>
{% endblock %}
