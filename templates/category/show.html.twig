{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
    <h1>{{category.name}}</h1>
    

            <table class="table">
                <th>ID</th>
                <th>Titre</th>
                <th>Résumé</th>
                {% for program in programs %}
                    <tr>
                        <td>
                            {{program.id}}
                        </td>
                        <td>
                            {{program.title}}
                        </td>
                        <td>
                            {{program.summary}}
                        </td>
                    </tr>
                        <td>
                            <a href="{{ path('program_show', {id:program.id} )}}">Voir sa fiche</a>
                {% else %}
                <p>Aucune série trouvée.</p>
                {% endfor %}
            </table>

    <a href="{{ path('category_index')}}">Retour à la liste des catégories</a>
{% endblock %}

